<%= render "navbar" %>

<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <h2 class="header center orange-text">Ranking</h2>
  </div>
</div>

<div class="container">
  <table class="striped">
    <thead>
      <tr>
        <th>UID</th>
        <th>Nome</th>
        <th>Pontuação Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @scores.each do |score| %>
        <tr>
          <td><%= score.uid %></td>
          <td><%= score.username %></td>
          <td><%= score.points %></td>
          <td><a href="/users/<%= score.uid %>/scores">Ver Mais</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
